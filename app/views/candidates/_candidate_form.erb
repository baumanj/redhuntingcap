<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@candidate) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :resume_url %>
      <%= f.text_field :resume_url %>

      <%= f.label :recruiter %>
      <%= f.select :recruiter_id,
        options_from_collection_for_select(User.all, :id, :name,
                                           selected: @candidate.recruiter_id),
        prompt: "Throat to choke?" %>

      <%= f.submit yield(:submit_text), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
